  * *
 * * *

#include <iostream>
#include<bits/stdc++.h>
using namespace std;

void solve(int n)
{
    for(int i=n;i>=1;i--)
    {
        for(int j=i;j>=1;j--)
        {
            cout<<" ";
        }
        for(int j=1;j<=2*(n-i)+1;j++)
        {
            cout<<"*";
        }
        for(int j=i;j>=1;j--)
        {
            cout<<" ";
        }
        cout<<endl;
    }
    
}
int main()
{
    int n;
    cin>>n;
    solve(n);

    return 0;
}
