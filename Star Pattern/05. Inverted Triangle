#include <iostream>
#include<bits/stdc++.h>
using namespace std;

void solve(int n)
{
   for(int i=0;i<n;i++)
   {
       for(int j=0;j<i;j++)
       {
           cout<<" ";
       }
       for(int j=2*(n-i-1)+1;j>0;j--)
       {
           cout<<"*";
       }
       for(int j=0;j<i;j++)
       {
           cout<<" ";
       }
       cout<<endl;
   }
    
}
int main()
{
    int n;
    cin>>n;
    solve(n);

    return 0;
}
